<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CustomLoadingDialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowSoftInputMode">stateUnspecified</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="simple_window_style">
        <item name="android:windowEnterAnimation">@anim/enter_in</item>
        <item name="android:windowExitAnimation">@anim/exit_out</item>
    </style>

</resources>